# Moueene Platform Environment Configuration
# Copy this file to .env and update with your actual credentials

# Application
APP_NAME=Moueene
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Africa/Casablanca

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=moueene_db
DB_USER=root
DB_PASS=
# Preferred key (supported by backend/config/database.php)
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Cloudinary (uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=3600
SESSION_LIFETIME=7200

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,ar

# Email (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_EMAIL=noreply@moueene.com
MAIL_FROM_NAME=Moueene

# SMS (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Payment Gateways
CURRENCY=MAD
PLATFORM_FEE_PERCENTAGE=15.00

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_MODE=sandbox

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=../uploads/

# CORS
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# API
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# Logging
LOG_ENABLED=true
LOG_LEVEL=debug
LOG_PATH=../logs/

# Cache
CACHE_ENABLED=false
CACHE_DRIVER=file
CACHE_TTL=3600
